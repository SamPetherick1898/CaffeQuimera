<h1>Bebidas</h1>

 <div class="drinks-container">
    
     {{#each drinks}}
     <div class="col-3 edge-padding">
            <div class="product-edge">
                    <img src={{url}} class="card-img-top max-img" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{name}}</h4>
                        <p class="card-text">{{description}}</p>
                        <span class="badge text-bg-warning">Precio: ${{price}}</span>

<h2>{{admin}}</h2>
                    </div>
                        <button onclick="addToCart(`{{_id}}`)" class="btn d-grid gap-2"> Agregar <i class="fa-solid fa-cart-shopping"></i></button>
                        <a href="/personalize/{{_id}}"><button class="btn d-grid gap-2">Personalizar</button></a>
                        {{#if admin}}
                        <a href="/drinks/{{_id}}"><button class="btn d-grid gap-2">Editar</button></a>
                        {{/if}}
            </div>
        </div>
     {{/each}}
<!--<h2>{{admin}}</h2>-->
  </div>
